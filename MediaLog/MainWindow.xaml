<Window x:Class="MediaLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:MediaLog.Views.Components"
        Title="MediaLog"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Efeito de Blur -->
        <Style x:Key="WindowBlur"
               TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#AA000000" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <BlurEffect Radius="20" />
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="test">pack://application:,,,/Fonts/#Inter</FontFamily>

        <Style TargetType="Window">
            <Setter Property="FontFamily"
                    Value="{StaticResource test}" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="{StaticResource test}" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily"
                    Value="{StaticResource test}" />
        </Style>

    </Window.Resources>

    <Grid MouseDown="DragWindow">
        <Border Style="{StaticResource WindowBlur}" />

        <Border Background="#AA000000"
                CornerRadius="15"
                BorderThickness="1"
                BorderBrush="Gray"
                Padding="10">

            <Grid>
                <Grid Height="40"
                      VerticalAlignment="Top"
                      Background="#66000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="📂 MediaLog"
                               FontSize="16"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="10,0,10,0" />

                    <Button Grid.Column="1"
                            Content="🗕"
                            Cursor="Hand"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontSize="16"
                            Click="MinimizeWindow" />

                    <Button Grid.Column="2"
                            Content="🗖"
                            Cursor="Hand"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontSize="16"
                            Click="MaximizeWindow" />

                    <Button Grid.Column="3"
                            Content="✖"
                            Cursor="Hand"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontSize="16"
                            Click="CloseWindow" />
                </Grid>

                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                              Margin="0, 80, 0, 0">
                    <StackPanel Orientation="Vertical">
                        <components:MediaViewer DataContext="{Binding MoviesViewModel}" />
                        <components:MediaViewer DataContext="{Binding SeriesViewModel}" />
                        <components:MediaViewer DataContext="{Binding AlbumsViewModel}" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
