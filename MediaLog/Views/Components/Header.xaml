<UserControl x:Class="MediaLog.Views.Components.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MediaLog.Views.Components"
             Height="65"
             Margin="35,35,10,10"
             VerticalAlignment="Top">
    <UserControl.Resources>
        <!-- Converter to control placeholder visibility -->
        <local:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="#66000000"
          >
        <Grid.ColumnDefinitions>
            <!-- Auto size for logo, star for search bar, auto for system buttons -->
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Logo on the left -->
        <Image Source="pack://application:,,,/Assets/medialog.png"
               Height="65"
               Width="157"
               Margin="10,0"
               VerticalAlignment="Center" />

        <!-- Search bar in the middle -->
        <Grid Grid.Column="1"
              Margin="10,0"
              VerticalAlignment="Center">
            <!-- Border for background and border styling -->
            <Border Background="#14D9D9D9"
                    BorderBrush="#A8FFFFFF"
                    BorderThickness="1"
                    CornerRadius="10" />
            <!-- The actual TextBox -->
            <TextBox x:Name="SearchBox"
                     Background="Transparent"
                     BorderThickness="0"
                     Height="48"
                     Padding="30,15,5,0"
                     Foreground="White" />
            <!-- Magnifying glass icon -->
            <TextBlock Text="🔍"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       Foreground="#A8FFFFFF"
                       IsHitTestVisible="False" />
            <!-- Placeholder text -->
            <TextBlock Text="O que você quer logar hoje?"
                       VerticalAlignment="Center"
                       Margin="30,0,0,0"
                       Foreground="#A8FFFFFF"
                       IsHitTestVisible="False"
                       Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
        </Grid>

        <!-- System icons on the right -->
        <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Button Content="🗕"
                    Width="30"
                    Height="30"
                    Margin="0,0,5,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="MinimizeWindow" />
            <Button Content="🗖"
                    Width="30"
                    Height="30"
                    Margin="0,0,5,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="MaximizeWindow" />
            <Button Content="✖"
                    Width="30"
                    Height="30"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="White"
                    Click="CloseWindow" />
        </StackPanel>
    </Grid>
</UserControl>
