<Window x:Class="MediaLog.MoviesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todos os Filmes Populares" Height="600" Width="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Black">
        <StackPanel Margin="20">
            <TextBlock Text="🎬 Todos os Filmes Populares" FontSize="24" FontWeight="Bold" Foreground="White" Margin="10"/>

            <ItemsControl x:Name="MoviesFullList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="10" Background="Black">
                            <StackPanel Width="200">
                                <Image Source="{Binding PosterPath}" Height="250" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" Margin="5"/>
                                <TextBlock Text="{Binding ReleaseDate}" FontSize="12" Foreground="Gray" Margin="5"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Fechar" Background="Gray" Foreground="White" Width="100" Height="40" Click="CloseWindow"/>
        </StackPanel>
    </ScrollViewer>
</Window>
